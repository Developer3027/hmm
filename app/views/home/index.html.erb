<!--hero-->
<section id="hero" class="mt-14 w-full min-h-svh bg-zinc-950 bg-no-repeat bg-center bg-cover bg-[url('https://images.stockcake.com/public/8/a/6/8a6f2733-82ab-4ac8-97a2-799f740287ac/truck-sunset-drive-stockcake.jpg')]">
  <div class="flex justify-center items-center py-8 px-4 w-full min-h-svh lg:py-16 z-10 relative">
    <div class="flex flex-col justify-center items-center lg:w-fit text-center md:mt-44 lg:mt-60 bg-gray-900/60 px-2 py-5 rounded-lg">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-black mb-5 text-teal-400 text-base md:text-lg rounded-lg inline-block max-w-sm" id="notice"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="py-2 px-3 bg-black mb-5 text-rose-400 text-base md:text-lg rounded-lg inline-block max-w-sm" id="alert"><%= alert %></p>
      <% end %>
      <span class="mb-1 text-2xl font-semibold tracking-tight leading-none md:text-2xl lg:text-4xl text-gray-200">
        Steer your career in the right direction.
      </span>
      <div class="flex flex-col justify-center items-center w-11/12">
        <h1 class="text-3xl font-bold m-0 p-0 text-gray-200">TRUCKERJOBS4U</h1>
      </div>
      <%= link_to "START YOUR JOURNEY", "#contact", class: "py-6 px-12 mt-6 rounded bg-yellow-300 text-slate-900 hover:bg-yellow-400 cursor-pointer font-bold" %>
    </div>
  </div>
</section>
<!--newsletter-->
<section id="newsletter" class="w-full bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6 z-10">
    <div class="mx-auto max-w-screen-md sm:text-center">
      <h2 class="mb-4 text-3xl tracking-tight font-extrabold sm:text-4xl text-yellow-300">Stay up to date with our newsletter</h2>
      <p class="mx-auto mb-8 max-w-2xl font-light md:mb-12 sm:text-xl text-gray-400">Transportation is changing. Sign up to get the latest news on developments!</p>
      <%= render "newsletter" %>
    </div>
  </div>
</section>
<!--Paths to choose-->
<section id="paths" class="flex justify-center items-center w-full">
  <div class="w-full lg:max-w-4xl my-10 p-4 text-center border rounded-lg shadow sm:p-8 bg-gray-800 border-gray-700">
    <div class="flex justify-center items-center">
      <h1 class="font-bold text-xl text-gray-200">TRUCKERJOBS4U</h1>
    </div>
    <p class="mb-5 text-base sm:text-lg text-gray-400">
      Which route would you prefer? <br/>
      Fill out a quick form, letting our recruiters know a bit about you and what you are looking for or have you found a job and are ready to get serious about seeing what's over the horizon?
    </p>
    <div class="md:grid-cols-3 items-center justify-center space-y-4 sm:flex sm:space-y-0 sm:space-x-4 rtl:space-x-reverse">
      <!--Inquiry Card-->
      <div class="md:w-1/3 md:max-h-[700px] border rounded-lg shadow bg-gray-800 border-gray-700">
        <%= image_tag("https://images.stockcake.com/public/d/1/e/d1e3f8ff-88bd-41c5-b399-25acbdb61107/sunset-truck-interior-stockcake.jpg", width: "480", alt: "View of the truck driver seat at sunset.", class: "rounded-t-lg", loading: "lazy") %>
        <div class="p-5">
          <span class="mb-2 text-2xl font-bold tracking-tight text-white">Quick Inquiry</span>
          <p class="mb-3 font-normal text-gray-400">Just starting to look around for better opportunities? We can help?</p>
          <%= link_to "#contact", class: "inline-flex items-center px-6 py-3 text-sm font-medium text-center text-white rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800" do %>
            Help Me
            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
          <% end %>
        </div>
      </div>
      <!--Application Card-->
      <div class="md:w-1/3 md:max-h-[700px] border rounded-lg shadow bg-gray-800 border-gray-700">
        <%= image_tag("https://images.stockcake.com/public/c/2/b/c2bdfe31-457e-48cc-8e38-8edf98fab29a/sunset-truck-stop-stockcake.jpg", width: "480", alt: "White Kenworth with red stripes in yard under red evening sky.", class: "rounded-t-lg", loading: "lazy") %>
        <div class="p-5">
          <span class="mb-2 text-2xl font-bold tracking-tight text-white">Application</span>
          <p class="mb-3 font-normal text-gray-400">Have you been asked to fill out a application? Get yourself square here.</p>
          <%= link_to root_path, class: "inline-flex items-center px-6 py-3 text-sm font-medium text-center text-white rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800" do %>
            Let's Go!
            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
          <% end %>
        </div>
      </div>
      <!--Job Search Card-->
      <div class="md:w-1/3 md:max-h-[700px] border rounded-lg shadow bg-gray-800 border-gray-700">
        <%= link_to root_path do %>
          <%= image_tag("https://images.stockcake.com/public/9/4/4/944a3f74-7e76-4600-9e8d-d12dffc0fd7f/sunset-truck-journey-stockcake.jpg", width: "480", alt: "Trucks lined up at the wharehouse as the sun rises.", class: "rounded-t-lg", loading: "lazy") %>
          <div class="p-5">
            <span class="mb-2 text-2xl font-bold tracking-tight text-white">Job Search</span>
            <p class="mb-3 font-normal text-gray-400">Want to browse the jobs we are currently placeing driver for? Drive Safe.</p>
            <%= link_to root_path, class: "inline-flex items-center px-6 py-3 text-sm font-medium text-center text-white rounded-lg focus:ring-4 focus:outline-none bg-blue-600 hover:bg-blue-700 focus:ring-blue-800" do %>
              Find it!
              <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<!--contact-->
<section id="contact" class="w-full pt-10 bg-zinc-950">
  <div class="flex flex-col justify-center items-center">
    <div class="w-full lg:max-w-4xl my-10 p-4 text-center border rounded-lg shadow sm:p-8 bg-gray-900 border-gray-700">
      <div class="grid sm:grid-cols-2">
        <div class="hidden md:block mx-auto my-auto">
          <%= image_tag("https://images.stockcake.com/public/d/1/e/d1e3f8ff-88bd-41c5-b399-25acbdb61107/sunset-truck-interior-stockcake.jpg", alt: "View of the truck drivers seat at dusk.", class: "rounded-lg w-72 sm:w-full", loading: "lazy") %>
        </div>
        <div class="flex flex-col justify-center items-center">
          <div class="w-full lg:max-w-xl p-6 space-y-8 sm:p-8 rounded-lg lg:ml-6">
            <h2 class="flex flex-col text-2xl font-bold text-white">
              Contact Us.
            </h2>
            <div class="flex flex-col">
              <small class="text-white">
                Are you ready to jump in the driver's seat of your career? We would love to hear from you. Let's get to work on your new career today!
              </small>
              <small class="text-gray-300">
                [<span class="text-orange-300"> * </span>] indicates required
              </small>
            </div>
            <%= render "leadform" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>